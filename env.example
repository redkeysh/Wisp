# =============================================================================
# Wisp Framework Configuration
# =============================================================================
# Copy this file to .env and fill in your values
# For local development, you can also use .env.local
# =============================================================================

# =============================================================================
# DISCORD BOT CONFIGURATION
# =============================================================================

# Discord Bot Token (REQUIRED)
# Get this from https://discord.com/developers/applications
DISCORD_TOKEN=your_discord_bot_token_here

# Discord Application ID (optional but recommended)
# Used for OAuth and command syncing
DISCORD_APPLICATION_ID=123456789012345678

# Bot Owner IDs (comma-separated)
# Users with these IDs have owner permissions
DISCORD_OWNER_IDS=123456789012345678,987654321098765432

# Guild IDs for dev-only command sync (comma-separated, optional)
# Commands will sync to these guilds immediately (for testing)
DISCORD_GUILD_IDS=123456789012345678

# =============================================================================
# DISCORD INTENTS
# =============================================================================
# Enable the intents your bot needs
# See: https://discordpy.readthedocs.io/en/stable/api.html#discord.Intents

DISCORD_INTENTS_GUILDS=true
DISCORD_INTENTS_MEMBERS=false
DISCORD_INTENTS_MESSAGES=true
DISCORD_INTENTS_MESSAGE_CONTENT=false
DISCORD_INTENTS_REACTIONS=true
DISCORD_INTENTS_VOICE_STATES=false
DISCORD_INTENTS_GUILD_MESSAGES=true
DISCORD_INTENTS_DM_MESSAGES=true
DISCORD_INTENTS_PRESENCES=false

# Legacy format (also supported)
# INTENTS_GUILDS=true
# INTENTS_MEMBERS=false
# INTENTS_MESSAGES=true

# =============================================================================
# APPLICATION BRANDING
# =============================================================================

# Application name (shown in embeds, defaults to "Wisp Bot")
APP_NAME=Echo Bot

# Application icon URL (optional, shown in embed author and thumbnail)
# Use a direct image URL (Discord CDN, Imgur, etc.)
APP_ICON_URL=https://example.com/your-bot-icon.png

# Custom footer text for embeds (optional, defaults to APP_NAME)
APP_FOOTER_TEXT=Powered by Echo Bot

# Application environment (development/staging/production)
APP_ENV=development

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Database URL (optional, but recommended for production)
# PostgreSQL example: postgresql+asyncpg://user:password@localhost:5432/dbname
# SQLite example: sqlite+aiosqlite:///./data/bot.db
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/wisp_bot

# Database pool settings (optional)
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# Echo SQL queries (useful for debugging, defaults to false)
DB_ECHO_SQL=false

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================

# Redis URL (optional, used for caching and rate limiting)
# Format: redis://localhost:6379/0
# Or with password: redis://:password@localhost:6379/0
REDIS_URL=redis://localhost:6379/0

# Redis enabled flag (optional, defaults to true if REDIS_URL is set)
REDIS_ENABLED=true

# Cache default TTL in seconds (optional, defaults to 300)
CACHE_DEFAULT_TTL_SECONDS=300

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Wisp Framework specific log level (optional, defaults to LOG_LEVEL)
LOG_LEVEL_WISP_FRAMEWORK=INFO

# =============================================================================
# SENTRY ERROR TRACKING
# =============================================================================

# Sentry DSN for error tracking (optional)
# Get this from https://sentry.io
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Sentry traces sample rate (0.0 to 1.0, optional)
# 1.0 = 100% of transactions traced, 0.0 = no tracing
SENTRY_TRACES_SAMPLE_RATE=0.1

# =============================================================================
# WEBHOOK LOGGING
# =============================================================================

# Webhook URL for logging (optional)
# Discord webhook URL for sending logs
WEBHOOK_LOGGER_URL=https://discord.com/api/webhooks/your-webhook-url

# =============================================================================
# BOT BEHAVIOR
# =============================================================================

# Sync commands on startup (true/false, defaults to true)
SYNC_ON_STARTUP=true

# Welcome channel ID (optional, default channel for welcome messages)
WELCOME_CHANNEL_ID=123456789012345678

# =============================================================================
# OPEN TELEMETRY (OPTIONAL)
# =============================================================================

# Enable OpenTelemetry (optional, defaults to false)
OTEL_ENABLED=false

# OpenTelemetry service name (optional, defaults to "wisp-bot")
OTEL_SERVICE_NAME=wisp-bot

# OpenTelemetry OTLP endpoint (optional)
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317

# =============================================================================
# ADVANCED CONFIGURATION
# =============================================================================

# Strict configuration mode (fail fast on missing required configs)
STRICT_CONFIG=false

# Timezone for the application (defaults to UTC)
TZ=UTC

# =============================================================================
# FEATURE FLAGS (Bot-specific)
# =============================================================================
# These are examples - customize for your bot

# FEATURE_WELCOME_MESSAGES=true
# FEATURE_AUTOMOD=false
# FEATURE_TICKETS=false

# =============================================================================
# EXTERNAL INTEGRATIONS (Bot-specific)
# =============================================================================
# These are examples - customize for your bot

# OpenAI API key (optional)
# OPENAI_API_KEY=sk-your-openai-api-key

# Giphy API key (optional)
# GIPHY_API_KEY=your-giphy-api-key

# YouTube API key (optional)
# YOUTUBE_API_KEY=your-youtube-api-key

# =============================================================================
# WEBHOOKS (Bot-specific)
# =============================================================================
# These are examples - customize for your bot

# Alerts webhook URL (optional)
# ALERTS_WEBHOOK_URL=https://discord.com/api/webhooks/your-alerts-webhook

# Audit webhook URL (optional)
# AUDIT_WEBHOOK_URL=https://discord.com/api/webhooks/your-audit-webhook

# =============================================================================
# STORAGE (Bot-specific)
# =============================================================================
# These are examples - customize for your bot

# Data directory path
# DATA_DIR=./data

# Uploads directory path
# UPLOADS_DIR=./data/uploads

# =============================================================================
# S3 STORAGE (Bot-specific, optional)
# =============================================================================

# S3_ENABLED=false
# S3_ENDPOINT_URL=https://s3.amazonaws.com
# S3_REGION=us-west-2
# S3_BUCKET=your-bucket-name
# S3_ACCESS_KEY_ID=your-access-key-id
# S3_SECRET_ACCESS_KEY=your-secret-access-key

# =============================================================================
# SECURITY (Bot-specific)
# =============================================================================

# Application secret key for signing/encryption (optional)
# APP_SECRET_KEY=your-secret-key-here

# Signing secret for webhook verification (optional)
# SIGNING_SECRET=your-signing-secret-here

# =============================================================================
# NOTES
# =============================================================================
# - Only DISCORD_TOKEN is required
# - All other variables are optional
# - Boolean values: true, false, 1, 0, yes, no, on, off
# - Comma-separated lists are supported for IDs
# - Environment variables take precedence over .env file
# - .env.local takes precedence over .env
# - .env.{APP_ENV} takes precedence over .env
# - Comments start with # and are ignored
# - Values can be quoted with " or ' (quotes are removed automatically)
